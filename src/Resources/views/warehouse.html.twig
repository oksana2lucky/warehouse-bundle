{% extends '@Oksana2luckyWarehouse/base.html.twig' %}

{% block title %}Warehouse | {{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ title }}</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        {% for field in fields %}
                            <th>{{ field }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        {% for field in fields %}
                            <td>{{ attribute(item, field) }}</td>
                        {% endfor %}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
