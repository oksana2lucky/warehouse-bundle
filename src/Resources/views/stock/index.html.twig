{% extends '@Oksana2luckyWarehouse/base.html.twig' %}

{% block title %}Warehouse | Stocks{% endblock %}

{% block body %}
    <div class="container">
        <h2>Stocks</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Address</th>
                </tr>
                </thead>
                <tbody>
                {% for stock in stocks %}
                    <tr>
                        <td>{{ stock.id }}</td>
                        <td><a href="{{ path('oksana2lucky_warehouse_stock_view', {'id': stock.id}) }}">{{ stock.name }}</a></td>
                        <td>{{ stock.address }}</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
