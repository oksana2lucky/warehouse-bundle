{% extends '@Oksana2luckyWarehouse/base.html.twig' %}

{% block title %}Warehouse | Products{% endblock %}

{% block body %}
    <h1>Add to stock</h1>

    <div class="container container-fluid">
        <div class="row">
            <div class="col-lg-8">
                {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}
                <div class="form-group">
                    {{ form_label(form.stock) }}
                    {{ form_widget(form.stock) }}
                    {{ form_errors(form.stock) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity) }}
                    {{ form_errors(form.quantity) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.save, {'label': "Save", 'attr' : { 'class': 'btn btn-primary' }}) }}
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}