{% extends '@Oksana2luckyWarehouse/base.html.twig' %}

{% block title %}Warehouse | Products{% endblock %}

{% block body %}
    <div class="container">
        <h2>Products</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Sku</th>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.sku }}</a></td>
                        <td><a href="{{ path('oksana2lucky_warehouse_product_view', {'id': product.id}) }}">{{ product.name }}</a></td>
                        <td>{{ product.price }}</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
